<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_0"
            android:layout_marginTop="@dimen/dimen_0"
            android:layout_marginEnd="@dimen/dimen_0"
            android:layout_marginBottom="@dimen/dimen_0"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:id="@+id/sexMaleLinear"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dimen_5"
                android:layout_weight="1"
                android:background="@drawable/background_sex_selection_component_deactivated"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_16">

                <ImageView
                    android:id="@+id/sexMaleImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_male"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/sexMaleText"
                    style="@style/Headline.H6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:text="@string/male_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sexFemaleLinear"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_weight="1"
                android:background="@drawable/background_sex_selection_component_deactivated"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_16">

                <ImageView
                    android:id="@+id/sexFemaleImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_female"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/sexFemaleText"
                    style="@style/Headline.H6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:text="@string/female_text" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>