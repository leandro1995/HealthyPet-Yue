<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HealthyPet" parent="Theme.Material3.Light.NoActionBar">

        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_4552CB</item>

        <!-- Lock theme in the app -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.HealthyPet" parent="Base.Theme.HealthyPet" />

    <!-- Splash Screen-->

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blue_4552CB</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_splash</item>
        <item name="windowSplashScreenAnimationDuration">@integer/splash_screen_time_out</item>
        <item name="postSplashScreenTheme">@style/Theme.HealthyPet</item>
    </style>

</resources>