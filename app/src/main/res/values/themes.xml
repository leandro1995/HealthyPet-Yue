<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HealthyPet" parent="Theme.Material3.Light.NoActionBar">

        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_4552CB</item>
        <item name="colorAccent">@color/blue_4552CB</item>

        <!-- Background Activity -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Lock theme in the app -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="DateDialog" parent="Theme.Material3.Light.NoActionBar">

        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_4596EA</item>
        <item name="colorAccent">@color/blue_4596EA</item>
    </style>

    <style name="Theme.HealthyPet" parent="Base.Theme.HealthyPet" />

    <style name="Theme.Transparent" parent="Base.Theme.HealthyPet">

        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.ToActivity" parent="Base.Theme.HealthyPet">

        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Splash Screen-->

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blue_4552CB</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_splash</item>
        <item name="windowSplashScreenAnimationDuration">@integer/splash_screen_time_out</item>
        <item name="postSplashScreenTheme">@style/Theme.HealthyPet</item>
    </style>

    <!-- Headline -->

    <style name="Headline">

        <item name="android:textColor">@color/blue_070821</item>
    </style>

    <style name="Headline.H1">

        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/sp_34</item>
    </style>

    <style name="Headline.H2">

        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/sp_24</item>
    </style>

    <style name="Headline.H3">

        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="Headline.H5">

        <item name="fontFamily">@font/semi_bold</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="Headline.H6">

        <item name="fontFamily">@font/semi_bold</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>

    <style name="Headline.Body1">

        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="ButtonText">

        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Component -->

    <style name="Button" parent="ButtonText">

        <item name="backgroundTint">@color/blue_4552CB</item>
        <item name="android:layout_width">@dimen/dimen_250</item>
        <item name="android:layout_height">@dimen/dimen_60</item>
    </style>

    <style name="MaterialToolBar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">

        <item name="titleTextColor">@color/blue_070821</item>
    </style>

    <style name="EditText" parent="Headline.H6">

        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_45</item>
        <item name="android:paddingStart">@dimen/dimen_10</item>
        <item name="android:paddingEnd">@dimen/dimen_10</item>
        <item name="android:foregroundTint">@color/blue_4552CB</item>
        <item name="android:textColorHint">@color/lead_BBC3CE</item>
    </style>

    <style name="TextArea" parent="EditText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_150</item>
        <item name="android:paddingTop">@dimen/dimen_10</item>
    </style>

    <style name="BottomNavigationView">

        <item name="colorSecondaryContainer">@color/blue_4552CB</item>
        <item name="fontFamily">@font/medium</item>
    </style>

    <!-- Dialog App -->

    <style name="dialog" parent="@style/ThemeOverlay.Material3.MaterialCalendar">

        <item name="materialCalendarHeaderTitle">@style/TitleDialog</item>
        <item name="materialCalendarHeaderSelection">@style/HeaderDateDialog</item>
        <item name="materialCalendarHeaderToggleButton">@style/SwitchToKeyboardDateDialog</item>
        <item name="materialCalendarYearNavigationButton">@style/YearSelectionDateDialog</item>
        <item name="materialCalendarMonthNavigationButton">@style/MonthPaginationDateDialog</item>
        <item name="colorSurface">@color/white</item>
        <item name="theme">@style/DateDialog</item>
    </style>

    <style name="TitleDialog" parent="@style/Widget.Material3.MaterialCalendar.HeaderTitle">

        <item name="android:textColor">@color/blue_4596EA</item>
    </style>

    <style name="HeaderDateDialog" parent="@style/Widget.Material3.MaterialCalendar.HeaderSelection">

        <item name="android:textColor">@color/blue_4596EA</item>
    </style>

    <style name="SwitchToKeyboardDateDialog" parent="@style/Widget.Material3.MaterialCalendar.HeaderToggleButton">

        <item name="android:tint">@color/blue_4596EA</item>
    </style>

    <style name="YearSelectionDateDialog" parent="@style/Widget.Material3.MaterialCalendar.YearNavigationButton">

        <item name="android:textColor">@color/blue_4596EA</item>
        <item name="iconTint">@color/blue_4596EA</item>
    </style>

    <style name="MonthPaginationDateDialog" parent="@style/Widget.Material3.MaterialCalendar.MonthNavigationButton">

        <item name="android:textColor">@color/blue_4596EA</item>
        <item name="iconTint">@color/blue_4596EA</item>
    </style>

</resources>